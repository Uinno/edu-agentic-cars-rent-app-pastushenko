# Backend Environment Variables
# Copy to .env and fill in the values

# ── Database ──────────────────────────────────────────────────────────────────
# Option 1: Full connection URL (preferred)
DATABASE_URL=postgresql://postgres:password@localhost:5432/car_rental

# Option 2: Individual fields (used if DATABASE_URL is not set)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASS=password
# DB_NAME=car_rental

# ── JWT ───────────────────────────────────────────────────────────────────────
JWT_SECRET=change-me-at-least-32-chars-long-secret
JWT_REFRESH_SECRET=change-me-different-32-chars-long-secret
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# ── App ───────────────────────────────────────────────────────────────────────
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug
